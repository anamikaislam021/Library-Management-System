<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:controller="library.BookController"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to right, #FF512F, #DD2476);">

    <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="20" prefWidth="500">
        <Label text="Book Management" style="-fx-font-size: 20px; -fx-text-fill: white;"/>

        <HBox spacing="10">
            <TextField fx:id="titleField" promptText="Title"/>
            <TextField fx:id="authorField" promptText="Author"/>
        </HBox>

        <HBox spacing="10">
            <TextField fx:id="isbnField" promptText="ISBN"/>
            <TextField fx:id="categoryField" promptText="Category"/>
        </HBox>

        <HBox spacing="10">
            <Button text="Add" onAction="#addBook" />
            <Button text="Update" onAction="#updateBook" />
            <Button text="Delete" onAction="#deleteBook" />
            <Button text="Refresh" onAction="#loadBooks" />
        </HBox>

        <TableView fx:id="bookTable" prefHeight="200" prefWidth="500">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                <TableColumn fx:id="titleCol" text="Title" prefWidth="130"/>
                <TableColumn fx:id="authorCol" text="Author" prefWidth="100"/>
                <TableColumn fx:id="isbnCol" text="ISBN" prefWidth="100"/>
                <TableColumn fx:id="categoryCol" text="Category" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
